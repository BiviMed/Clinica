@model ClinicaBase.Models.ViewModels.ControlesViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Controles";
}

<div class="container">
    <div class="text-center m-5">
        <h1>Controles del Paciente</h1>
    </div>
           

    @{
        if(Model != null){
            <div class="text-center mb-5">
                <h3>Datos</h3>
                <h4>Documento: @Model.Documento</h4>
                <h4>Nombres: @Model.Nombres</h4>
                <h4>Apellidos: @Model.Apellidos</h4>
            </div>

            if (Model.Controles != null)
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Fecha</th>
                            <th>Motivo</th>
                            <th>Tratamiento</th>
                        </tr>
                    </thead>

                    @if (Model.Controles != null)
                    {
                        @foreach (var control in Model.Controles)
                        {
                            <tbody>
                                <tr>
                                    <td>@control.Fecha</td>
                                    <td>@control.Motivo</td>
                                    <td>@control.Tratamiento</td>
                                </tr>
                            </tbody>
                        }
                    }
                </table>
            }
        }
    }
</div>
