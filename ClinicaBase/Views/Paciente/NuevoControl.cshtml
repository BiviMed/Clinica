@model ClinicaBase.Models.ViewModels.NuevoControleViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Nuevo Control";
}


<div class="container">
    <div class="text-center mb-4">
        <h1>Nuevo Control</h1>
    </div>

    @{
        if (Model != null)
        {
            if (Model.Succeeded == 0 && Model.Message != null)
            {
                <div class="alert alert-danger mt-3 mb-3" role="alert">
                    @Model.Message
                </div>
            }
        }
    }

    <div class="mb-3">
        <form asp-action="NuevoControl" >
            <div asp-validation-summary="ModelOnly"></div>

            <div class="mb-3">
                <label class="form-label">Documento del paciente</label>
                <input asp-for="PatientId" readonly="readonly" class="form-control"  />
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Nombres</label>
                <input asp-for="Nombres" readonly="readonly" class="form-control" />
                <span asp-validation-for="Nombres" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Apellidos</label>
                <input asp-for="Apellidos" readonly="readonly" class="form-control" />
                <span asp-validation-for="Apellidos" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Motivo</label>
                <input asp-for="Motivo" class="form-control" />
                <span asp-validation-for="Motivo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Tratamiento</label>
                <input asp-for="Tratamiento" class="form-control" />
                <span asp-validation-for="Tratamiento" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Confrimar Control</button>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}


