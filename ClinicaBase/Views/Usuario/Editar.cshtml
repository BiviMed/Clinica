@using System.Security.Claims;
@model ClinicaBase.Models.ViewModels.EditarUsuarioViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Editar";
    string rolUsuarioAutenticado = User.FindFirstValue(ClaimTypes.Role);
}

<div class="container">
    <div class="text-center m-4">
        <h1>Editar Rol del Usuario</h1>
    </div>

    @{
        if (Model != null)
        {
            if (Model.Message != null && Model.Succeeded == 0)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @Model.Message
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        }
    }

    <form asp-action="Editar">

        <div class="mb-2">
            <label class="form-label">Documento:</label>
            <input asp-for="@Model.Documento" class="form-control" readonly="readonly" />
        </div>

        <div class="mb-2">
            <label class="form-label">Nombres:</label>
            <label class="text-danger fw-bold">*</label>
            <input asp-for="@Model.Nombres" class="form-control" />
            <span asp-validation-for="Nombres" class="text-danger"></span>
        </div>

        <div class="mb-2">
            <label class="form-label">Apellidos:</label>
            <label class="text-danger fw-bold">*</label>
            <input asp-for="@Model.Apellidos" class="form-control" />
            <span asp-validation-for="Apellidos" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Rol:</label>
            <label class="text-danger fw-bold">*</label>
            <select asp-for="Rol" asp-items="@Model.Roles" class="form-select"></select>
            <span asp-validation-for="Rol" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <a asp-controller="Usuario" asp-action="Index" class="btn btn-secondary">Regresar</a>
            <button type="submit" class="btn btn-primary">Actualizar</button>
        </div>
    </form>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}