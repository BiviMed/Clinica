@model ClinicaBase.Models.ViewModels.PerfilViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Perfil";
}

<div class="container">
    <div class="text-center m-5">
        <h1>Mi Perfil</h1>
    </div>

    @{
        if (Model != null)
        {
            if (Model.Message != null)
            {
                if (Model.Succeeded == 0)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @Model.Message
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                if (Model.Succeeded == 1)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @Model.Message
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
            }
        }
    }

    <form asp-action="EditarPerfil">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label class="form-label">Documento:</label>
            <input asp-for="Documento" class="form-control" readonly="readonly"/>            
        </div>

        <div class="mb-3">
            <label class="form-label">Nombres:</label>
            <input asp-for="Nombres" class="form-control" readonly="readonly" />
        </div>

        <div class="mb-3">
            <label class="form-label">Apellidos:</label>
            <input asp-for="Apellidos" class="form-control" readonly="readonly" />
        </div>

        <div class="mb-3">
            <label class="form-label">Función:</label>
            <input asp-for="Rol" class="form-control" readonly="readonly" />
        </div>

        <div class="mb-3">
            <label class="form-label">Correo:</label>
            <input asp-for="Correo" class="form-control" />
            <span asp-validation-for="Correo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Teléfono:</label>
            <input asp-for="Telefono" class="form-control" />
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>        

        <div class="mb-3">
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                Ir a Home
            </a>

            <button type="submit" class="btn btn-success">
                Guardar Cambios
            </button>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
